<!DOCTYPE html>
<html>
<head>
  <title>Scame A-ware</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0; /* Remove default margin */
      height: 100vh; /* Make the body full height */
    }
    .question-container {
      position: absolute; /* Position the container absolutely */
      top: 0; /* Top alignment */
      left: 0; /* Left alignment */
      width: calc(5/13 * 100vw); /* 5/11ths of the viewport width */
      height: 100vh; /* Full height */
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="question-container">
    <h2 id="question-text">Question Text</h2>
    <form id="question-form">
      <ul id="options-list">
        <li>
          <input type="radio" id="option-1" name="option" value="1">
          <label for="option-1">Option 1</label>
        </li>
        <li>
          <input type="radio" id="option-2" name="option" value="2">
          <label for="option-2">Option 2</label>
        </li>
        <li>
          <input type="radio" id="option-3" name="option" value="3">
          <label for="option-3">Option 3</label>
        </li>
        <li>
          <input type="radio" id="option-4" name="option" value="4">
          <label for="option-4">Option 4</label>
        </li>
      </ul>
      <button type="submit">Submit</button>
    </form>
  </div>
  <script src="/js/mcq.js"></script>
</body>
</html>